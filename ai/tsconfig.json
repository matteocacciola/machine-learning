{
    "compilerOptions": {
        "incremental": true,
        "module": "commonjs",
        "target": "ES2021",
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist/",
        "rootDir": "./",
        "strict": true,
        "skipLibCheck": true,
        "alwaysStrict": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        ".eslintrc",
        "src"
    ]
}